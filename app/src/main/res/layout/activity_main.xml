<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="swe.sofolab.floatingactionbuttonwithanimation.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:id="@+id/one"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textAppearance="?android:textAppearanceLarge"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_instagrm_xml"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="250dp"
            android:layout_marginRight="20dp"
            app:backgroundTint="#dd4b0d"
            android:elevation="6dp"
            android:visibility="invisible"
            app:pressedTranslationZ="12dp"
            android:src="@drawable/ic_action_instagrmr"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:id="@+id/two"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:textAppearance="?android:textAppearanceLarge"
            />


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_twitter_xml"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="180dp"
            android:layout_marginRight="20dp"
            app:backgroundTint="#07bca4"
            android:elevation="6dp"
            android:visibility="invisible"
            app:pressedTranslationZ="12dp"
            android:src="@drawable/ic_action_name"
            />
    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/three"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            android:textAppearance="?android:textAppearanceLarge"
            />


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_fab_xml"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="100dp"
            app:backgroundTint="#353923"
            android:layout_marginRight="20dp"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:visibility="invisible"
            android:src="@drawable/ic_action_search"

            />

    </LinearLayout>





    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_plus_xml"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="20dp"
        app:backgroundTint="#6A1B9A"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_action_plus"
        />



</android.support.design.widget.CoordinatorLayout>
